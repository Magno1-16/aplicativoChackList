<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#128290">

    <LinearLayout
        android:id="@+id/layoutContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de Objetos"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingBottom="24dp" />

        <!-- Item 1 -->
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categoria: Tecnologia"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iten: Placa de Video"
                android:textColor="@color/white"/>

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <RadioButton
                    android:id="@+id/radioSim1"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:text="Sim"
                    android:textColor="@color/white"/>

                <RadioButton
                    android:id="@+id/radioNao1"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:text="Não"
                    android:textColor="@color/white"/>
            </RadioGroup>
        </LinearLayout>

        <!-- Item 2 -->
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iten: Decoração"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Material: Vaso de Flor"
                android:textColor="@color/white"/>

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <RadioButton
                    android:id="@+id/radioSim2"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:text="Sim"
                    android:textColor="@color/white"/>

                <RadioButton
                    android:id="@+id/radioNao2"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:text="Não"
                    android:textColor="@color/white"/>
            </RadioGroup>
        </LinearLayout>

        <!-- Item 3 -->
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categoria: Higiene Pessoal"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Iten: Shampoo, Condicionador e Sabonete" />

            <RadioGroup
                android:id="@+id/radioGroup3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <RadioButton
                    android:id="@+id/radioSim3"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:text="Sim"
                    android:textColor="@color/white"/>

                <RadioButton
                    android:id="@+id/radioNao3"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:text="Não"
                    android:textColor="@color/white"/>
            </RadioGroup>
        </LinearLayout>

        <!-- Item 4 -->
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categoria: Roupas"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iten: Camisetas, Calças e Sapatos"
                android:textColor="@color/white"/>

            <RadioGroup
                android:id="@+id/radioGroup4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <RadioButton
                    android:id="@+id/radioSim4"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:text="Sim"
                    android:textColor="@color/white"/>

                <RadioButton
                    android:id="@+id/radioNao4"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:text="Não"
                    android:textColor="@color/white"/>
            </RadioGroup>
        </LinearLayout>

        <!-- Item 5 -->
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categoria: Acessorios"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iten: Corrente, Pulseira, Anel e Brinco"
                android:textColor="@color/white"/>

            <RadioGroup
                android:id="@+id/radioGroup5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <RadioButton
                    android:id="@+id/radioSim5"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:text="Sim"
                    android:textColor="@color/white"/>

                <RadioButton
                    android:id="@+id/radioNao5"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:text="Não"
                    android:textColor="@color/white"/>
            </RadioGroup>
        </LinearLayout>

        <!-- Botão Confirmar -->
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:onClick="onConfirmar"
                android:text="Confirmar escolhas"
                android:backgroundTint="#31AAA0"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
